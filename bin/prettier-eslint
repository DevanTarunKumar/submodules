#!/usr/bin/env bash

set -eu

dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

. ${dir}/get_local_user
. ${dir}/get_tty
. ${dir}/get_images

docker run \
    ${LOCAL_USER_ID:-} \
    ${TTY:-} \
    --rm \
    -i \
    -v $(pwd):/var/www:delegated \
    -w /var/www \
    ${PRETTIER_ESLINT_IMAGE} "$@"
