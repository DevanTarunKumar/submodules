#!/usr/bin/env bash

set -eu

dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

. ${dir}/get_tty
. ${dir}/get_user

docker run \
    ${LOCAL_USER_ID:-} \
    -i \
    --rm \
    ${TTY} \
    -v $(pwd):/workdir:delegated \
    gcr.io/docker-1000101/php-cs-fixer:2.16.1-e789817 "$@"
