#!/usr/bin/env bash

set -euo pipefail

dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

. "$dir/get_tty"
. "$dir/get_local_user"
. "$dir/get_images"

docker run \
    ${LOCAL_USER_ID:-} \
    $TTY \
    -i \
    -v "$(pwd)":/workdir:delegated \
    --rm \
    us.gcr.io/docker-1000101/php-cs-fixer:latest \
    "$@"
